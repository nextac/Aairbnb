
<div class= container>
  <section>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="centerBlock">
          <% if @user.avatars.present? %>
            <%= image_tag (@user.avatars[0].square.url) %>
          <%end%>
        </div>
      </div>
        <br>
      <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 center-elements" style="padding-top:100px; padding-bottom:100px;">
        <div class="text-center">
            <strong><%= @user.email.upcase%></strong>
            <br>
            <br>
          <a class="btn btn-info" href="<%= edit_user_path(current_user.id) %>" role="button">EDIT YOUR PROFILE</a>
        </div>

      </div>
    </div>

    <hr>

    <div class="row">



    </div>

    <div class= "row">


      <% current_user.listings.each do |l|%>
        <% if l.avatars.present? %>
          <a href="/listings/<%=l.id%>"><%=image_tag (l.avatars[0].square.url) %></a> <br>
        <%end%>

        <%= link_to "#{l.title}", listing_path(l.id) %><br>

        <%= l.location %><br>

        <%= l.description %><br>

      <%end%>


    </div>

  </section> <!-- end section 1 -->

  <section>


  </section>





</div> <!-- container div -->





